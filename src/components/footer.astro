<footer class=" group relative text-muted-600 body-font overflow-hidden">


    <div class="overflow-x-hidden">
        <div class="absolute bottom-0 mt-[100px] ml-[-50%] h-[200px] w-[200%] rounded-t-[100%] bg-gradient-to-b from-blue-400 via-blue-500 to-blue-600">
            <div class="mt-5 text-center text-2xl text-white">Footer</div>
        </div>
    </div>
    <div class="relative w-full max-w-7xl mx-auto px-5 py-24 z-20">

        <div class="flex flex-wrap md:text-left text-center">
            <div class="lg:w-1/4 md:w-1/2 w-full px-4">

                <ul class="font-sans space-y-2 mb-10">
                    {footerMenu.items.map(item => (
                    <li>
                        <a href={stripDomainFromWpUrl(item)} class=" text-sm underline-offset-4 text-muted-300/60 hover:text-white hover:underline dark:text-muted-400 dark:hover:text-muted-100">
                            {item.title}
                        </a>
                    </li>
                    ))}
                </ul>
            </div>


        </div>
    </div>

    <div class="relative  z-20">
        <div class=" w-full max-w-7xl mx-auto px-5 py-6 flex items-center sm:flex-row flex-col">
            <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
<span set:html={svgIcon(logo, 'w-32 h-32')}></span>

