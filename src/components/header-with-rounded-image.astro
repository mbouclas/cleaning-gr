---
import {cloudinaryRawSettings} from "@helpers/cloudinary.helper";
import {Astro} from "astro/env";

const {title} = Astro.props;
---

<section  class="relative overflow-hidden active">

    <div class="px-4 md:px-10">
        <div class="rounded-2xl overflow-hidden bg-no-repeat bg-cover bg-center">
            <div class={`${Astro.slots.has('image') ? 'bg-black/30' : 'bg-white'} rounded-2xl relative`}>
<slot name="image"></slot>
                <div class="container">
                    <div class="p-6 relative">

                        <div class="flex h-full items-center justify-center py-36">
                            <div class="text-center max-w-3xl mx-auto relative">
                                <h1 class={`${Astro.slots.has('image') ? 'text-white' : 'text-black'} md:text-5xl/snug text-3xl font-medium mt-10`}>
                                    <slot name="title">{title}</slot>
                                </h1>
                                {Astro.slots.has('description') && (
                                <p class={`${Astro.slots.has('image') ? 'text-white/80' : 'text-black'} w-3/4 mx-auto text-base font-normal mt-5`}>
                                    <slot name="description"></slot>
                                </p>
                                )}



                                <div class={`flex justify-center mt-10 ${Astro.slots.has('description') ? '' : 'h-24'}`}>

                                    {Astro.slots.has('cta') && (
                                            <slot name="cta"></slot>
  <!--                                  <a href="#" class="inline-flex items-center justify-center gap-2 text-base py-2 px-8 rounded-md text-white bg-primary hover:bg-primary-700 transition-all duration-700">Read More
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" data-lucide="move-right" class="lucide lucide-move-right h-6 w-6"><path d="M18 8L22 12L18 16"></path><path d="M2 12H22"></path></svg>
                                    </a>-->
                                    )}
                                </div>

                            </div>
                        </div><!-- flex End -->
                    </div>
                </div>
            </div>
        </div>
    </div><!-- Container End -->
</section>
